{
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        }
      },
      "required": [
        "images"
      ]
    },
    "preview": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": [
            "gif",
            "png",
            "jpg",
            "jpeg",
            "webp"
          ]
        },
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        },
        "lineColor": {
          "type": "string",
          "minLength": 1
        },
        "lineWidth": {
          "type": "integer",
          "minimum": 0
        },
        "lineStyle": {
          "type": "string",
          "enum": [
            "solid",
            "dashed",
            "longDashed",
            "dotted",
            "dashedDot"
          ]
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "alignContent": {
          "type": "object",
          "properties": {
            "horizontal": {
              "type": "string",
              "enum": [
                "left",
                "center",
                "right"
              ]
            },
            "vertical": {
              "type": "string",
              "enum": [
                "top",
                "middle",
                "bottom"
              ]
            }
          }
        },
        "base64": {
          "type": "boolean"
        },
        "grayscale": {
          "type": "boolean"
        },
        "orientation": {
          "type": "string",
          "enum": [
            "portrait",
            "landscape"
          ]
        },
        "paperSize": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 1
          },
          "minItems": 2,
          "maxItems": 2
        },
        "fit": {
          "type": "string",
          "enum": [
            "contain",
            "cover",
            "fill"
          ]
        },
        "grid": {
          "type": "object",
          "properties": {
            "row": {
              "type": "integer",
              "minimum": 1
            },
            "column": {
              "type": "integer",
              "minimum": 1
            },
            "paddingX": {
              "type": "integer",
              "minimum": 0
            },
            "paddingY": {
              "type": "integer",
              "minimum": 0
            },
            "gapX": {
              "type": "integer",
              "minimum": 0
            },
            "gapY": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      },
      "required": [
        "paperSize"
      ]
    }
  },
  "required": [
    "input",
    "output"
  ]
}